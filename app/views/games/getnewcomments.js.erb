<% unless @games.empty? %>
	<% @games.each do |g| %>
		$(".game_container #<%= g.id %> .game_comment_list").html("<%= raw escape_javascript(render :partial => 'gamecomments', :locals => { :comments => g.comments, :game => g}) %>");
		$(".game_container #<%= g.id %> .nbr_game_comments").text($(".game_container #<%= g.id %> .game_comment_list").children().length + " kommentarer p√• matchen.");
	<% end %>
	$(".game_container").attr("data-time", "<%= @last_comment.updated_at.to_i %>");
	$(".game_container").isotope('layout');
<% end %>
